%section.register.container
  .row
    .col-sm-8.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal do |f|
        %header
          %h1 Register
        %fieldset
          = f.text_field :email_address, label: 'Email Address', class:'form-control'
          = f.password_field :password, label: 'Password', class: 'form-control'
          = f.text_field :full_name, label: 'Full Name', class: 'form-control'
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit 'Sign Up', class:'btn btn-default'
