%section.register.container
  .row
    .col-sm-8.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal do |f|
        %header
          %h1 Register
        %fieldset
          = f.text_field :email_address, label: 'Email Address'
          = f.password_field :password, label: 'Password'
          = f.text_field :full_name, label: 'Full Name'
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key= #{ENV['STRIPE_PUBLISHABLE_KEY']}
          data-amount="999" data-name="Myflix Sign Up Charge" data-description="1 Subscription ($9.99)" data-locale="auto"></script>
