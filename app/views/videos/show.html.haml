%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="http://localhost:3000/tmp/monk_large.jpg")
      .video_info.col-sm-3
        %header
          %h3= @video.title 
          %span Rating: 4.5/5.0
        %p= @video.description

%section.reviews.container 
  .row 
    .col-sm-10.col-sm-offset-1
      = form_for @review do |f|
        .form-group 
          = f.label :rating, "Rate this Video"
          .row
            .col-sm-3
              = f.select :rating, [["1 Star", 1], ["2 Stars", 2], ["3 Stars", 3],
                                          ["4 Stars", 4], ["5 Stars", 5]], 
                                          { prompt: 'Choose a rating' }, { class: 'form-control' }
                                          
        .form-group
          .row 
            .col-sm-8
              = f.label :content, "Write Review"
              = f.text_area :content, rows: 6, class: 'form-control'
           
        .form-group.actions.clearfix
          = f.submit class:'btn'
          %a Cancel 
          
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul 
        - @reviews.each do |review|
          %article.review
            %li.row 
              .col-sm-2
                %span Rating: #{review.rating}
                %p by <a href="#">#{review.user.full_name}</>
              .col-sm-8 
                %p= review.content
                